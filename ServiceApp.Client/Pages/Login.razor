@page "/login"
@using ServiceApp.Shared.Model
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<link rel="stylesheet" href="css/app.css" />

@if (ShowErrors)
{
    <div class="alert alert-danger" role="alert">
        <p>@Error</p>
    </div>
}

<div class="bg"></div>

<section class="container-fluid">
    <div class="container d-flex justify-content-center">
        <div class="row">
@*             <div class="col d-flex justify-content-center align-items-center py-lg-5 col-foreWordsContainer">
                <div class="p-lg-5 d-flex flex-lg-column justify-content-center text-white text-center foreWordsContainer">
                    <div>
                        <h5 class="mb-4">
                            Where ministry meets compassion, <br />
                            Where support finds a home.
                        </h5>
                        <p class="small mb-1">
                            In retrospect, the Shepherd’s Shelter Organization Inc is all about achieving the FINANCIAL WELL-BEING of Pastors in the Philippines. Moreover, the heart of the ministry is to provide a sense of stability and a bedrock of support for Pastors in times of emergencies.
                        </p>
                    </div>
                </div>
            </div> *@
            <div class="col col-lg-10 col-xl-6 d-flex justify-content-center align-items-center py-lg-5 col-loginFormContainer">
                <div class=" p-lg-5 d-flex flex-lg-column justify-content-center loginFormContainer">
                    <div>
                        <img class="img-fluid mb-3 logo" src="logo-Shepherd.png" alt="Shepherd's Logo">
                        <h5 class="text-center mb-3">Please login to your account</h5>
                        <EditForm Model="loginModel" OnValidSubmit="HandleLogin">
                            <DataAnnotationsValidator />
                            <div class="form-group">
                                <label for="email" class="mt-2">Email address</label>
                                <InputText Id="email" Placeholder="Email Address" Class="form-control" @bind-Value="loginModel.Email" />
                                <ValidationMessage For="@(() => loginModel.Email)" />
                            </div>
                            <div class="form-group">
                                <label for="password" class="mt-2">Password</label>
                                <InputText Id="password" type="password" Placeholder="Password" Class="form-control" @bind-Value="loginModel.Password" />
                                <ValidationMessage For="@(() => loginModel.Password)" />
                            </div>
                            <button type="submit" class="btn btn-primary mt-3 w-100 submitBtn">Submit</button>
                        </EditForm>
                        <hr />
                        <div class="d-flex align-items-center justify-content-center mt-3">
                            <button type="button" class="btn btn-success" @onclick="ToRegister">Create new account</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

